---
export interface Props {
  svg?: string;
  block?: boolean;
  width?: string;
}

const { svg, block, width } = Astro.props;
---

<button
  type="button"
  class:list={[block && "block"]}
  style={width ? { width } : undefined}
>
  {svg && <img src={svg} />}
  <slot />
</button>

<style lang="scss" scoped>
  button {
    font-family: Poppins;
    font-size: 22px;
    font-weight: 600;
    line-height: 36px;
    letter-spacing: 0.5px;
    border-radius: $border-radius;
    border: none;
    padding: 14px 36px;
    transition: transform 0.2s ease-in-out;

    display: grid;
    grid-template-columns: 32px auto;
    gap: 16px;

    background-color: $bg-color;
    color: $text-color-white;

    img {
      width: 32px;
      height: 32px;
    }
    &:hover {
      transform: scale(1.05);
    }
  }

  .block {
    width: 100%;
  }
</style>
