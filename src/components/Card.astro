---
export interface Props {
  src: string;
  title: string;
  description: string;
}

const { src, title, description } = Astro.props;
---

<div class="card">
  {src && <img src={src} alt={title} />}
  <div>
    <h4>{title}</h4>
    <p>{description}</p>
  </div>
</div>

<style lang="scss" scoped>
  .card {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 24px;

    background: #fcfcfc;
    box-shadow: 0px 18px 58px 16px rgba(0, 0, 0, 0.06);
    border-radius: $border-radius;

    img {
      width: 37px;
      height: 37px;
      margin-bottom: 18px;
    }

    h4 {
      font-family: Playfair Display;
      font-size: 22px;
      font-weight: 700;
      line-height: 22px;
      margin-bottom: 10px;
    }

    p {
      font-family: Plus Jakarta Sans;
      font-size: 14px;
      line-height: 24px;
      letter-spacing: 0.3px;
    }
  }
</style>
