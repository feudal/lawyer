---
export interface Props {
  src: string;
  title: string;
  description: string;
}

const { src, title, description } = Astro.props;
---

<div class="pricing-card">
  <img src={src} alt={title} />
  <div>
    <h4>{title}</h4>
    <p>{description}</p>
  </div>
</div>

<style lang="scss" scoped>
  .pricing-card {
    font-size: 0;
    line-height: 0;
    position: relative;
    width: 100%;
    aspect-ratio: 1/1;
    div {
      position: absolute;
      width: 100%;
      height: fit-content;
      margin-top: 20px;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    h4 {
      font-size: 20px;
      font-weight: 500;
      line-height: 25px;
      letter-spacing: 0.5px;
    }

    p {
      font-size: 14px;
      line-height: 14px;
      letter-spacing: 0.5px;
      margin-top: 5px;
    }
  }
</style>
