<style lang="scss" scoped>
  .embla {
    position: relative;
    display: flex;
  }
  .embla__container {
    display: flex;
    flex: 0 0 50%;
  }
  .embla__slide {
    flex: 0 0 50%;
    min-width: 0;
    margin-right: 20px;
  }

  section {
    padding: 60px 0 90px;
    background-color: $bg-color-light;

    h2 {
      font-family: Playfair Display;
      font-size: 48px;
      font-weight: 700;
      line-height: 64px;
      letter-spacing: 0.5px;
      text-align: center;

      margin-bottom: 50px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 30px;

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
      }
    }
  }
</style>
